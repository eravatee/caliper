{
    "$schema": "https://json-schema.org/draft-06/schema",
    "$ref": "#/definitions/ConfigurationHelper",
    "definitions": {   
        "ConfigurationHelper": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "caliper": {
                    "type": "object",
                    "properties": {
                        "auth": {
                            "type": "object",
                            "description": "Define settings related to authorization for Prometheus and Prometheus push",
                            "properties": {
                                "prometheuspush": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "description": "Prometheus Push Gateway",
                                    "properties": {
                                        "username": {
                                            "description": "Prometheus Push Gateway; username",
                                            "type": "null"
                                        },
                                        "password": {
                                            "description": "Prometheus Push Gateway; password",
                                            "type": "null"
                                        }
                                    },
                                    "title": "Prometheus Push"
                                },
                                "prometheus": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "description": "Prometheus",
                                    "properties": {
                                        "username": {
                                            "description": "Prometheus; username",
                                            "type": "null"
                                        },
                                        "password": {
                                            "description": "Prometheus; password",
                                            "type": "null"
                                        }
                                    },
                                    "title": "Prometheus"
                                }
                            },
                            "additionalProperties": false,
                            "title": "Authentication"
                        },
                        "bind": {
                            "description": "We use the bind command to inform caliper which platform to target and which platform SDK version to use. Settings related to the binding command",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "sut": {
                                    "description":"SUT/platform name and SDK version: The binding specification of the SUT in the <SUT type>:<SDK version> format",
                                    "type": "null"
                                },
                                "cwd": {
                                    "description": "The Current Working Directory to use for the binding (i.e., npm install) command",
                                    "type": "null"
                                },
                                "args": {
                                    "description": "The additional arguments to pass to the binding (i.e., npm install) command",
                                    "type": "null"
                                },
                                "file": {
                                    "description": "The file to use when binding (replace supported defaults)",
                                    "type": "null"
                                }
                            },
                            "title": "Bind"
                        },
                        "report": {
                            "description": "Report file-related options", 
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "path": {
                                    "description": "The absolute or workspace-relative path of the report file.",
                                    "type": "string"
                                },
                                "options": {
                                    "description": "The options to pass to fs.writeFile",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "flag": {
                                            "description": "The mode in which file will be opened in", 
                                            "type": "string"
                                        },
                                        "mode": {
                                            "description": "Access Permissions for file",
                                            "type": "integer"
                                        }
                                    },
                                    "title": "report Options"
                                },
                                "precision": {
                                    "description": "Precision (significant figures) for the report output",
                                    "type": "integer"
                                },
                                "charting": {
                                    "description": "Charting options",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "hue": {
                                            "type": "integer"
                                        },
                                        "scheme": {
                                            "type": "string"
                                        },
                                        "transparency": {
                                            "type": "number"
                                        }
                                    },
                                    "title": "Charting"
                                }
                            },
                            "title": "Report"
                        },
                        "workspace": {
                            "title": "Workspace",
                            "description": "Workspace directory that contains all configuration information",
                            "type": "string"
                        },
                        "projectconfig": {
                            "title": "Project Configuration",
                            "description": "projectconfig: If you have a group of settings that are always overridden in your Caliper benchmark project, then it is recommended to define them as a project-level configuration file. This file will usually consist of a subset of settings defined in the default configuration file (and probably your custom settings associated with your custom user module). Here, mention the file path for the project-level configuration file. Can be relative to the workspace.",
                            "type": "null"
                        },
                        "userconfig": {
                            "title": "User Configuration",
                            "description": "userconfig: If you find yourself overriding the same settings for multiple Caliper benchmark projects, then it is recommended to extract the common settings into a user-level configuration file. Here, mention the file path for the user-level configuration file. Can be relative to the workspace.",
                            "type": "null"
                        },
                        "machineconfig": {
                            "title": "Machine Configuration",
                            "description": "machineconfig: If multiple users use the same workstation and want to share common settings across Caliper projects and users, then a machine-level configuration file can be included into the hierarchy by specifying its path. The file path for the machine-level configuration file. Can be relative to the workspace.",
                            "type": "null"
                        },
                        "benchconfig": {
                            "title": "Bench Configuration",
                            "description": "Path to the benchmark workload file that describes the test workers(s), test rounds and monitor",
                            "type": "null"
                        },
                        "networkconfig": {
                            "title": "Network Configuration",
                            "description": "Path to the blockchain configuration file that contains information required to interact with the SUT",
                            "type": "null"
                        },
                        "progress": {
                            "description": "Configurations related to caliper test progress",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "reporting": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "enabled": {
                                            "description": "Enable the reporting action",
                                            "type": "boolean"
                                        },
                                        "interval": {
                                            "description": "Reporting frequency",
                                            "type": "integer"
                                        }
                                    },
                                    "title": "Reporting"
                                }
                            },
                            "title": "Progress"
                        },
                        "monitor": {
                            "description": "Each declared resource monitoring module is accompanied with options required to configure each of the named monitors. A common option for some modules is interval, which is used to configure the refresh interval at which point resource utilization is measured by the monitor. Heer, mention configurations related to caliper resource monitors",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "interval": {
                                    "description": "Update interval",
                                    "type": "integer"
                                }
                            },
                            "title": "Monitor"
                        },
                        "observer": {
                            "description": "Transaction monitors are used by Caliper workers to act on the completion of transactions. They are used internally to aggregate and dispatch transaction statistics to the manager process to enable transaction statistics aggregation for progress reporting via the default observer, and report generation. Here, configurations related to caliper transaction observers",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "internal": {
                                    "description": "Internal transaction observer",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "interval": {
                                            "description": "Update interval (in sec)",
                                            "type": "integer"
                                        }
                                    },
                                    "title": "Observer Internal"
                                },
                                "prometheuspush": {
                                    "description": "Prometheus PushGateway transaction observer",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "interval": {
                                            "description": "Update interval",
                                            "type": "integer"
                                        }
                                    },
                                    "title": "Observer Prometheus Push"
                                },
                                "prometheus": {
                                    "description": "Prometheus transaction observer",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "scrapeport": {
                                            "description": "Default scrape port for prometheus transaction observer",
                                            "type": "integer"
                                        }
                                    },
                                    "title": "Observer Prometheus"
                                }
                            },
                            "title": "Observer"
                        },
                        "logging": {
                            "description": "Specifies the message structure through placeholders",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "template": {
                                    "type": "string"
                                },
                                "formats": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "timestamp": {
                                            "type": "string"
                                        },
                                        "label": {
                                            "type": "string"
                                        },
                                        "json": {
                                            "type": "boolean"
                                        },
                                        "pad": {
                                            "type": "boolean"
                                        },
                                        "align": {
                                            "type": "boolean"
                                        },
                                        "attributeformat": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "properties": {
                                                "level": {
                                                    "type": "string"
                                                },
                                                "label": {
                                                    "type": "string"
                                                },
                                                "module": {
                                                    "type": "string"
                                                },
                                                "metadata": {
                                                    "type": "string"
                                                }
                                            },
                                            "title": "Attributeformat"
                                        },
                                        "colorize": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "properties": {
                                                "level": {
                                                    "type": "boolean"
                                                },
                                                "message": {
                                                    "type": "boolean"
                                                },
                                                "colors": {
                                                    "type": "object",
                                                    "additionalProperties": false,
                                                    "properties": {
                                                        "info": {
                                                            "type": "string"
                                                        },
                                                        "error": {
                                                            "type": "string"
                                                        },
                                                        "warn": {
                                                            "type": "string"
                                                        },
                                                        "debug": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "title": "Colors"
                                                }
                                            },
                                            "title": "Colorize"
                                        }
                                    },
                                    "title": "Formats"
                                },
                                "targets": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "console": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "properties": {
                                                "target": {
                                                    "type": "string"
                                                },
                                                "enabled": {
                                                    "type": "boolean"
                                                },
                                                "options": {
                                                    "type": "object",
                                                    "additionalProperties": false,
                                                    "properties": {
                                                        "level": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "required": [
                                                        "level"
                                                    ],
                                                    "title": "Console Options"
                                                }
                                            },
                                            "title": "Console"
                                        },
                                        "file": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "properties": {
                                                "target": {
                                                    "type": "string"
                                                },
                                                "enabled": {
                                                    "type": "boolean"
                                                },
                                                "options": {
                                                    "type": "object",
                                                    "additionalProperties": false,
                                                    "properties": {
                                                        "level": {
                                                            "type": "string"
                                                        },
                                                        "filename": {
                                                            "type": "string"
                                                        },
                                                        "maxSize": {
                                                            "type": "string"
                                                        },
                                                        "zippedArchive": {
                                                            "type": "boolean"
                                                        },
                                                        "options": {
                                                            "type": "object",
                                                            "additionalProperties": false,
                                                            "properties": {
                                                                "flags": {
                                                                    "type": "string"
                                                                },
                                                                "mode": {
                                                                    "type": "integer"
                                                                }
                                                            },
                                                            "required": [
                                                                "flags",
                                                                "mode"
                                                            ],
                                                            "title": "Options Options"
                                                        }
                                                    },
                                                    "title": "File Options"
                                                }
                                            },
                                            "title": "File"
                                        }
                                    },
                                    "title": "Targets"
                                }
                            },
                            "title": "Logging"
                        },
                        "worker": {
                            "description": "Indicate if workers are in distributed mode",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "remote": {
                                    "type": "boolean"
                                },
                                "communication": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "method": {
                                            "type": "string"
                                        },
                                        "address": {
                                            "type": "string"
                                        }
                                    },
                                    "title": "Communication"
                                }
                            },
                            "title": "Worker"
                        },
                        "flow": {
                            "description": "Caliper flow options",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "skip": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "start": {
                                        "type": "boolean"
                                    },
                                    "init": {
                                        "type": "boolean"
                                    },
                                    "install": {
                                        "type": "boolean"
                                    },
                                    "test": {
                                        "type": "boolean"
                                    },
                                    "end": {
                                        "type": "boolean"
                                    }
                                },
                                "title": "Only"
                                },
                                "only": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "start": {
                                            "type": "boolean"
                                        },
                                        "init": {
                                            "type": "boolean"
                                        },
                                        "install": {
                                            "type": "boolean"
                                        },
                                        "test": {
                                            "type": "boolean"
                                        },
                                        "end": {
                                            "type": "boolean"
                                        }
                                    },
                                    "title": "Only"
                                }
                            },

                            "title": "Flow"
                        },
                        "fabric": {
                            "description": "Configurations related to the Fabric Connector",
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "verify": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "proposalresponse": {
                                            "type": "boolean"
                                        },
                                        "readwritesets": {
                                            "type": "boolean"
                                        }
                                    },
                                    "title": "Verify"
                                },
                                "timeout": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "invokeorquery": {
                                            "type": "integer"
                                        }
                                    },
                                    "required": [
                                        "invokeorquery"
                                    ],
                                    "title": "Timeout"
                                },
                                "loadbalancing": {
                                    "type": "string"
                                },
                                "latencythreshold": {
                                    "type": "integer"
                                },
                                "gateway": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "enabled": {
                                            "type": "boolean"
                                        },
                                        "localhost": {
                                            "type": "boolean"
                                        },
                                        "eventstrategy": {
                                            "type": "string"
                                        },
                                        "querystrategy": {
                                            "type": "string"
                                        }
                                    },
                                    "title": "Gateway"
                                }
                            },
                            "title": "Fabric"
                        }
                    },
                    "title": "Caliper"
                }
            },
            "title": "Configuration Helper"
        }
    }
}